<%- include('./layouts/main_layouts.ejs') -%>

<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6" id="exploreimg">
      <img src="/img/gamelogo.png" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Cooking With Node.js">
    </div>
    <div class="col-12 col-lg-6">
      <h1 class="display-5 fw-bold mb-3">Huge selection of Mobile & Computer GamingNews </h1>
      <p class="lead">
        Explore our huge selection of gamingnews including; Clash of Clans, Battle Ground Mobile India and Grand-Auto-Theft-V,Valorent,Rocket League and So on......
      </p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Latest</a>
        <a href="/explore-random" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Show Random</a>
      </div>
    </div>
  </div>



  <!--Catagory List  -->
  <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(categories != '') { %>
        <% categories.forEach(function(category) { %>
          <a href="/categories/<%- category.name %>" class="col text-center category__link">
            <div class="category__img shadow">
              <img src="img/<%- category.image %>" alt="<%- category.name %>" loading="lazy">
            </div>
            <div class="pt-1"><%- category.name %></div>
          </a>
        <% }) %>
      <% } %>
      
    <a href="/viewall" class=" col text-center categaroy__link">
        <div class="category__img shadow">
            <img src="img/gamae.jpg" alt="View all GamingNews" loading="lazy">
        </div>
        <div class="pt-1">View All</div>
    </a>
  </div>

  <!-- Categori end -->

  <!-- Latest start -->
  <section class="pb-4 pt-4">
      <div class="d-flex mb-2 align-items-center">
          <h2>Latest News</h2>
          <a href="/explore-latest" class="ms-auto">View More</a>
      </div>
      <div class="row rpw-cols-2 row-cols-lg-5 g-2 g-lg-3">
       <% if(news != '') { %>
        <% news.forEach(function(Latest)){ %>   
        <a href="/latest-news/<%- Latest.id %>" class=" col text-center categaroy__link">
            <div class="category__img  category__img--large shadow">
                <img src="img/<%- Latest.image %>" alt="<%- Latest.name %>" loading="lazy">
            </div>
            <div class="pt-1"><%- Latest.name%></div>
        </a>
      <% } %>
      <% } %>
       
      </div>
  </section>
