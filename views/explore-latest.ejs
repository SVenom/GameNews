<%- include('./layouts/main_layouts.ejs') -%>
<h1 class="pb-4">Explore Latest</h1>

 <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(latest != '') { %>
      <% latest.forEach(function(topic){ %>
      <a href="/latest_news/<%= topic._id %>" class="col text-center category__link">
        <div class="category__img category__img--large shadow">
          <img src="/img/<%= topic.image %>" alt="<%= topic.name %>" loading="lazy">
        </div>
        <div class="pt-1"><%= topic.name %></div>
      </a>
      <% }) %>
    <% } else { %>
      <p>No items found.</p>
    <% } %>
    </div>