<%- include('./layouts/main_layouts.ejs') -%>
<h1 class="pb-4">Search Result</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

    <% if(search != '') { %>
      <% search.forEach(function(search){ %>
      <a href="/categories/<%= search.name %>" class="col text-center category__link">
        <div class="category__img category__img--large shadow">
          <img src="/img/<%= search.image %>" alt="<%= search.name %>" loading="lazy">
        </div>
        <div class="pt-1"><%= search.name %></div>
      </a>
      <% }) %>
    <% } else { %>
      <p>No items found.</p>
    <% } %>
  </div> 